<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Tail of the bubble -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="#AFFFB3" /> <!-- Sender bubble color -->
            </shape>
        </rotate>
    </item>

    <!-- Main rectangle for the bubble -->
    <item android:right="10dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#AFFFB3" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
